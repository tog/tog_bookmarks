<% form_for bookmark, :url => member_bookmarks_bookmark_path(bookmark), :html => {:id => "f_update#{bookmark.id.to_s}", :method => "put"} do |f| -%>
  <div class="content clearfix">

      <p>
        <label for="title">Titulo</label>
        <%= f.text_field :title, :class => "wide fieldbox", :size => 30 %>
      </p>
      <p>
        <label for="privacy">Privado</label>
        <%= f.check_box :privacy%>
      </p>
      <p>
        <label for="description">Descripci√≥n</label>
        <%= f.text_area :description, :class => "wide fieldbox", :size => "40x6" %>
      </p>        
      <p>
        <label for="group_tag_list">Etiquetas:</label>
        <%= f.text_field :tag_list, :class => "wide fieldbox", :size => 30 %><br/>
        <span class="helpinfo">Separadas por comas</span>
      </p>

      

  </div> <!-- .content -->
  <div class="actions">
    <%= submit_tag 'Guardar', :name => 'bntsubmit', :class => 'button round'%>
  </div>
<% end -%>